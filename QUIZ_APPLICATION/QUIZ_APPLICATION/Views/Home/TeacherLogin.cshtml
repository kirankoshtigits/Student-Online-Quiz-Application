@model QUIZ_APPLICATION.Models.TBL_ADMIN

@{
    ViewBag.Title = "TeacherLogin";
}
<style>
    body {
        //background-image: url('../../Content/Image/img.jpg');
        //background-image: url('../../Content/Image/index.jpg');
        //background-image: url('../../Content/Image/hh.jpg');
        background-color: #ffebee;
    }
</style>
<div>
    <marquee behavior="scroll" direction="left" scrollamount="12" style="font-size:90px;font-family:'Times New Roman'; color:#00acc1   ;padding-top:10px;">Wel-Come To Admin Login Panel</marquee>
</div>


<h2 style=" padding-left:50px; font-size:50px;font-family:'Times New Roman';color:#455a64;font-weight:bold">Login As Admin</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <h4 style="font-family:'Times New Roman'">
                        @Html.LabelFor(model => model.AD_NAME, htmlAttributes: new { @class = "control-label col-md-2 " })
                    </h4>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.AD_NAME, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AD_NAME, "", new { @class = "text-danger" })
                        </div>
</div>

                <div class="form-group">
                    <h4 style="font-family:'Times New Roman'">
                        @Html.LabelFor(model => model.AD_PASSWORD, htmlAttributes: new { @class = "control-label col-md-2" })
                    </h4>
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.AD_PASSWORD, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AD_PASSWORD, "", new { @class = "text-danger" })
                        </div>
</div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" style="padding-top:15px">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<p style="color:red">@ViewBag.msg</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

