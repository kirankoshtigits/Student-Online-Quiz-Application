@model QUIZ_APPLICATION.Models.TBL_STUDENT

<style>
    body {
        //background-image: url('../../Content/Image/img.jpg');
        //background-image: url('../../Content/Image/index.jpg');
        //background-image: url('../../Content/Image/hh.jpg');
        // background-image: url('../../Content/Image/img3.jpg');
        background-color: #e0f7fa;
    }
</style>


@{
    ViewBag.Title = "StudentLogin";
}
<div>
    <marquee behavior="scroll" direction="left" scrollamount="12" style="font-size:90px;font-family:'Times New Roman'; color:#ef6c00 ;padding-top:10px;">Wel-Come To Student Login Panel</marquee>
</div>


<h2 style=" padding-left:50px;font-size:50px;font-family:'Times New Roman';color:#0094ff;font-weight:bold">Login As Student</h2>
@if (ViewBag.LoginErrorMsg != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>Error..!</strong>@ViewBag.LoginErrorMsg
    </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h4 style="font-family:'Times New Roman'">@Html.LabelFor(model => model.STD_NAME, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.STD_NAME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.STD_NAME, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4 style="font-family:'Times New Roman'"> @Html.LabelFor(model => model.STD_PASSWORD, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.STD_PASSWORD, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.STD_PASSWORD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

    <div>
        <h3 style="font-family:'Times New Roman'">@Html.ActionLink("Register Now", "StudentRegister")  </h3>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
